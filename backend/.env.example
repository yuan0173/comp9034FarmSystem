# COMP9034 FarmTimeMS Backend Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
CONNECTION_STRING_PRODUCTION="Server=your-server;Database=FarmTimeMS;User Id=your-user;Password=your-password;TrustServerCertificate=true"

# JWT Security Settings (CRITICAL - Generate strong keys for production)
JWT_SECRET_KEY="your-production-jwt-secret-key-minimum-32-characters-required-for-security"
JWT_ISSUER="COMP9034-FarmTimeMS-Production"
JWT_AUDIENCE="COMP9034-FarmTimeMS-Users-Production"
JWT_TOKEN_EXPIRY_MINUTES=120

# CORS Settings for Production
ALLOWED_ORIGINS_0="https://flindersdevops.azurewebsites.net"
ALLOWED_ORIGINS_1="https://your-production-domain.com"

# Application Settings
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS="https://localhost:5001;http://localhost:5000"

# Azure/Cloud Configuration (if applicable)
AZURE_CLIENT_ID=""
AZURE_CLIENT_SECRET=""
AZURE_TENANT_ID=""

# Logging Level
LOGGING__LOGLEVEL__DEFAULT=Information
LOGGING__LOGLEVEL__MICROSOFT_ASPNETCORE=Warning

# Security Notes:
# 1. Never commit .env files to version control
# 2. Use strong, unique keys for production
# 3. Rotate secrets regularly
# 4. Use Azure Key Vault or similar for cloud deployments