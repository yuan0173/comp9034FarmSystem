# COMP9034 FarmTimeMS Frontend Environment Variables
# Copy this file to .env and update with your actual values

# API Configuration
VITE_API_BASE_URL=http://localhost:4000

# Development vs Production API URLs
# Development: http://localhost:4000
# Production: https://flindersdevops.azurewebsites.net/api

# PWA Configuration
VITE_PWA_NAME="Farm Time Management System"
VITE_PWA_SHORT_NAME="FarmTimeMS"
VITE_PWA_DESCRIPTION="Attendance & Payroll Management System"

# Environment Mode
# Options: development, production, staging
VITE_APP_ENV=development

# Feature Flags (optional)
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_DEBUG_LOGS=true

# Security Settings
VITE_ENABLE_MOCK_DATA=false
VITE_API_TIMEOUT=10000

# Notes:
# 1. VITE_ prefix is required for environment variables in Vite
# 2. These values are exposed to the client-side code
# 3. Never put sensitive data in frontend environment variables
# 4. The app will auto-detect API URL if VITE_API_BASE_URL is not set